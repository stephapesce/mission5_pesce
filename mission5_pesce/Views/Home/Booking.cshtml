@{
    ViewBag.Title = "Service Calculator";
}

<div class="container mt-4 border border-dark border-2 rounded-2">
    <h2 class="mb-3 fw-bold">Service Calculator</h2>

    <div class="form-group mt-2">
        <label for="hours" class="fw-bolder">Hours of Pilates Training Needed:</label>
        <input type="number" id="hours" name="hours" class="form-control" min="1" required>
        <span id="error-message" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label for="rate" class="fw-bolder">Hourly Rate:</label>
        <input type="text" id="rate" name="rate" class="form-control" value="50" readonly>
    </div>

    <div class="mt-3 d-grid gap-2 ">
            <button id="calculate" class="btn btn-primary">Calculate Total</button>
    </div>

    <div class="form-group mt-2">
        <label for="total" class="fw-bolder">Total Cost:</label>
        <input type="text" id="total" name="total" class="form-control" readonly>
    </div>

    <div class="mt-2 mb-2">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to Home</a>
    </div>
</div>

@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/serviceCalculator.js"></script>
}




